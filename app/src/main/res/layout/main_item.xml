<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/main_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main_item_icon"
                android:layout_alignTop="@+id/main_item_icon"
                android:text="Title"
                android:textColor="#25C0DE"
                android:textSize="24sp"
                />

            <TextView
                android:id="@+id/main_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_item_title"
                android:layout_toRightOf="@+id/main_item_icon"
                android:layout_marginTop="8dp"
                android:text="Description"
                android:textColor="#6A5D5D"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>